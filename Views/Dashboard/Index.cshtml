@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 text-primary">Welcome, @ViewData["Username"]!</h1>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-0 bg-light">
                <div class="card-body text-center p-5">
                    <div class="mb-3 text-primary">
                        <i class="bi bi-people-fill" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="card-title text-dark">Employee Directory</h3>
                    
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary w-100 py-2">
                        View Employees
                    </a>
                </div>
            </div>
        </div>

