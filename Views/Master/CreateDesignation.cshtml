@model HRMS.Models.MasterViewModel
@{
    ViewData["Title"] = "Manage Designations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-award"></i> Create Designation</h5>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null) { <div class="alert alert-success">@TempData["Success"]</div> }
                    @if (TempData["Error"] != null) { <div class="alert alert-danger">@TempData["Error"]</div> }

                    <form asp-action="CreateDesignation" method="post">
                        <div class="mb-3">
                            <label asp-for="DesigName" class="form-label">Designation Name</label>
                            <input asp-for="DesigName" class="form-control" required placeholder="e.g. Senior Developer" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DesigLevel" class="form-label">Level (Priority)</label>
                            <input asp-for="DesigLevel" type="number" class="form-control" min="1" max="10" value="1" />
                        </div>
                        <button type="submit" class="btn btn-info text-white w-100">Save Designation</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary"><i class="bi bi-list-ul"></i> Existing Designations</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Designations != null && Model.Designations.Any())
                            {
                                foreach (var item in Model.Designations)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td><span class="badge bg-info text-dark">Level @item.Level</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="2" class="text-center text-muted py-3">No Designations Found</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>