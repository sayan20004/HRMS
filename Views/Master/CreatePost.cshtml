@model HRMS.Models.MasterViewModel
@{
    ViewData["Title"] = "Manage Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-briefcase"></i> Create Post</h5>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null) { <div class="alert alert-success">@TempData["Success"]</div> }
                    @if (TempData["Error"] != null) { <div class="alert alert-danger">@TempData["Error"]</div> }

                    <form asp-action="CreatePost" method="post">
                        <div class="mb-3">
                            <label class="form-label">Post Name</label>
                            <input name="PostName" class="form-control" required placeholder="e.g. Software Engineer" />
                        </div>
                        <button type="submit" class="btn btn-warning w-100">Save Post</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary"><i class="bi bi-list-ul"></i> Existing Posts</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Post Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Posts != null && Model.Posts.Any())
                            {
                                foreach (var item in Model.Posts)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td class="text-center text-muted py-3">No Posts Found</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>