@model HRMS.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">My Profile</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form asp-action="Edit" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email Address</label>
                            <input type="text" class="form-control" value="@Model.Email" readonly disabled />
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            
                            <a asp-action="ChangePassword" class="btn btn-warning">
                                <i class="bi bi-key"></i> Change Password
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>