@{
    // Check if user is logged in
    bool isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("Token"));
    string username = Context.Session.GetString("Username") ?? "";
    string email = Context.Session.GetString("Email") ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS Portal</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><i class="bi bi-people-fill"></i> HRMS Core</h3>
                <small class="text-white-50">Management System</small>
            </div>

            <ul class="list-unstyled components">
                
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <a asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                <li>
                    <a href="#employeeSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-person-badge me-2"></i> Employees
                    </a>
                    <ul class="collapse list-unstyled" id="employeeSubmenu">
                        <li>
                            <a asp-controller="Employee" asp-action="Index">
                                <i class="bi bi-list-ul me-2"></i> Employee List
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Employee" asp-action="Create">
                                <i class="bi bi-person-plus me-2"></i> Add New Employee
                            </a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#masterSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-database-gear me-2"></i> Master Data
                    </a>
                    <ul class="collapse list-unstyled" id="masterSubmenu">
                        <li>
                            <a asp-controller="Master" asp-action="Index">
                                <i class="bi bi-layers me-2"></i> Dept & Designations
                            </a>
                        </li>
                    </ul>
                </li>

                @if (isLoggedIn)
                {
                    <li>
                        <a href="#accountSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="bi bi-person-gear me-2"></i> My Account
                        </a>
                        <ul class="collapse list-unstyled" id="accountSubmenu">
                            <li>
                                <a asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person-circle me-2"></i> My Profile
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Profile" asp-action="ChangePassword">
                                    <i class="bi bi-key me-2"></i> Change Password
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Register" asp-action="Logout" class="text-danger">
                                    <i class="bi bi-box-arrow-left me-2"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                }

            </ul>
        </nav>

        <div id="content">
            
            <nav class="navbar navbar-expand-lg navbar-light bg-light top-navbar shadow-sm">
                <div class="container-fluid">
                    
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="bi bi-list"></i>
                    </button>
                    
                    <div class="ms-auto d-flex align-items-center">
                        @if (isLoggedIn)
                        {
                            <div class="me-3 text-end">
                                <span class="d-block fw-bold text-dark">@username</span>
                                <small class="text-muted">@email</small>
                            </div>
                            <a asp-controller="Register" asp-action="Logout" class="btn btn-outline-danger btn-sm">
                                Logout
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Register" asp-action="Login" class="btn btn-primary btn-sm">
                                Login
                            </a>
                        }
                    </div>
                </div>
            </nav>

            <div class="p-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>