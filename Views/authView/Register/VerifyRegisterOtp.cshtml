@model HRMS.Models.VerifyOtpViewModel
@{
    ViewData["Title"] = "Verify Registration OTP";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Verify Registration</h4>
        </div>
        <div class="card-body">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info">@TempData["Message"]</div>
            }
            <form asp-action="VerifyRegisterOtp" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label">Enter OTP sent to your email</label>
                    <input asp-for="Otp" class="form-control" placeholder="123456" />
                    <span asp-validation-for="Otp" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success w-100">Verify & Complete</button>
            </form>
        </div>
    </div>
</div>