@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<style>
    .login-container {
        max-width: 450px;
        margin: 80px auto;
        padding: 40px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .form-control { margin-bottom: 15px; }
    .btn-login { width: 100%; padding: 10px; background: #663399; color: white; border: none; border-radius: 5px; }
</style>

<div class="login-container">
    <h2 class="text-center">Login to HRMS</h2>
    
    @if (ViewData["Error"] != null) { <div class="alert alert-danger">@ViewData["Error"]</div> }
    @if (TempData["Success"] != null) { <div class="alert alert-success">@TempData["Success"]</div> }

    <form method="post" asp-action="LoginPost" asp-controller="Register">
        <div class="form-group">
            <label>Email Address</label>
            <input type="email" class="form-control" name="email" required>
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required>
        </div>

        <div class="form-group d-flex justify-content-center mb-3">
            <div class="g-recaptcha" data-sitekey="@ViewData["RecaptchaSiteKey"]"></div>
        </div>

        <button type="submit" class="btn-login">Login</button>
    </form>
    
    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Register")">Register here</a>
    </div>
</div>